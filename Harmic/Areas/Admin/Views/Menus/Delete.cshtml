@model Harmic.Models.TbMenu

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <!-- Content Header (Page header) -->
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-12">
                    <h1>Xóa menu</h1>
                </div>
                <div class="col-sm-12">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>
                </div>
            </div>
        </div><!-- /.container-fluid -->
    </section>

    <!-- Main content -->
    <section class="content">
        <div class="container-fluid">
            <div class="row">
                <!-- left column -->
                <div class="col-md-12">
                    <!-- general form elements -->
                    <div class="card card-primary">
                        <div class="card-header">
                            <h3 class="card-title">Xóa menu</h3>
                        </div>
                        <!-- /.card-header -->
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Title" class="control-label">Tiêu đề: </label>
                            @Html.DisplayFor(model => model.Title)
                        </div>
                        <div class="form-group">
                            <label asp-for="Alias" class="control-label"></label>
                            @Html.DisplayFor(model => model.Alias)
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Mô tả: </label>
                            @Html.DisplayFor(model => model.Description)
                        </div>
                        <div class="form-group">
                            <label asp-for="Levels" class="control-label">Mức: </label>
                            @Html.DisplayFor(model => model.Levels)
                        </div>
                        <div class="form-group">
                            <label asp-for="ParentId" class="control-label">Menu cha: </label>
                            @Html.DisplayFor(model => model.Parent.MenuId)
                        </div>
                        <div class="form-group">
                            <label asp-for="Position" class="control-label">Vị trí: </label>
                            @Html.DisplayFor(model => model.Position)
                        </div>     
                        <div class="form-group form-check">
                            <label asp-for="IsActive" class="control-label">Hiển thị: </label>
                            @Html.DisplayFor(model => model.IsActive)
                        </div>
                        <form asp-action="Delete">
                            <input type="hidden" asp-for="MenuId" />
                            <input type="submit" value="Xóa" class="btn btn-danger" /> |
                            <a asp-action="Index" class="btn btn-primary">Quay lại</a>
                        </form>
                    </div>
                </div>
                <!-- /.row -->
            </div><!-- /.container-fluid -->
    </section>
    <!-- /.content -->
</div>